<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="edu.bsu.cs445.archdemo.Main"
      xmlns:fx="http://javafx.com/fxml/1">
    <Label text="Enter Search Below." BorderPane.alignment="CENTER"/>
    <HBox>
        <TextField fx:id="searchField" onAction="#searchButtonClicked"/>
        <Button fx:id="searchButton" onAction="#searchButtonClicked" text="Search"/>
    </HBox>
    <HBox>
        <Label text="Last search yielded "/>
        <Label fx:id="resultCount" text="0"/>
        <Label text=" results"/>
    </HBox>
</VBox>
